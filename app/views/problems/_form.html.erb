
<%= simple_form_for(@problem) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.association :category%>
    <%= f.input :tag_list, label: 'Tags', value: f.object.tag_list.to_s %>
    <%#= f.input :status %>
    <%#= f.association :user %>
    <%#= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
