

<%= simple_form_for([problem, comment], remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div style="background-color: #FAFAFA; width: 100%">
    <div class="form-inputs">
      <div style="width: 90%; margin-left: 5%">
        <%= f.input :description, label: "Answer", :style => "width: 50%;" %>
      </div>
    </div>
    <div class="form-actions" style="width: 20%; margin-left: 5%; background-color: #004494; border-radius: 6px; display: flex;">
      <%= f.button :submit, :value => "Add answer", :style => "margin-left: 10%; color: white"%>
    </div>
    <div style="height: 30px"></div>
  </div>
<% end %>
